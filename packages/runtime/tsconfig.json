{
  "include": ["src/**/*.ts", "src/**/, "src/adapters/react/gatherFiberRoots.tsx", "src/adapters/react/getFiberBoundingBox.ts", "src/adapters/findFiberByHtmlElement.ts"*.tsx"],
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "noEmit": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "lib": ["ESNext", "dom"],
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  }
}
